{
  "experiment_type": "continuous",
  "task_type": "rdm",
  "data_collection": {
    "reaction-time": true,
    "accuracy": true,
    "correctness": false,
    "eye-tracking": false
  },
  "timeline": [
    {
      "type": "html-keyboard-response",
      "detection_response_task_enabled": false,
      "stimulus": "This is an experiment which consists of the Random Dot Motion task. Please respond to the stimuli by pressing keys Left Arrow and Right Arrow. Press any key to continue.",
      "choices": "ALL_KEYS"
    },
    {
      "type": "block",
      "detection_response_task_enabled": false,
      "component_type": "rdm-trial",
      "length": 10,
      "sampling_mode": "per-trial",
      "parameter_windows": {
        "coherence": {
          "min": 0.2,
          "max": 0.8
        },
        "speed": {
          "min": 4,
          "max": 10
        }
      },
      "parameter_values": {
        "direction": [
          0,
          180
        ],
        "dot_color": "#ffffff",
        "transition_duration": 500,
        "transition_type": "both"
      },
      "response_parameters_override": {
        "require_response": true,
        "response_device": "mouse",
        "end_condition_on_response": false,
        "mouse_response": {
          "enabled": true,
          "mode": "aperture-segments",
          "segments": 2,
          "start_angle_deg": 0,
          "selection_mode": "click"
        }
      }
    }
  ],
  "display_parameters": {
    "canvas_width": 600,
    "canvas_height": 600,
    "background_color": "#404040"
  },
  "aperture_parameters": {
    "shape": "circle",
    "diameter": 350,
    "center_x": 300,
    "center_y": 300,
    "show_aperture_outline": true,
    "aperture_outline_width": 2,
    "aperture_outline_color": "#ffffff"
  },
  "dot_parameters": {
    "total_dots": 150,
    "dot_size": 4,
    "dot_color": "#ffffff",
    "lifetime_frames": 60
  },
  "motion_parameters": {
    "coherence": 0.5,
    "direction": 0,
    "speed": 5,
    "noise_type": "random_direction"
  },
  "timing_parameters": {
    "fixation_duration": 500,
    "stimulus_duration": 1500,
    "response_deadline": 2500,
    "inter_trial_interval": 1200
  },
  "response_parameters": {
    "require_response": true,
    "response_device": "keyboard",
    "end_condition_on_response": false,
    "choices": [
      "ArrowLeft",
      "ArrowRight"
    ],
    "key_mapping": {
      "ArrowLeft": "left",
      "ArrowRight": "right"
    }
  },
  "frame_rate": 60,
  "duration": 30,
  "update_interval": 16,
  "transition_settings": {
    "duration_ms": 500,
    "type": "both"
  },
  "display_settings": {
    "canvas_width": 600,
    "canvas_height": 600,
    "background_color": "#404040"
  },
  "response_keys": [
    "ArrowLeft",
    "ArrowRight"
  ]
}